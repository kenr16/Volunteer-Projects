<h2><%= @floating_text %></h2>

<h4>Name: <%= @volunteer.name%></h4>
<h4>ID: <%= @volunteer.id%></h4>
<h4>Project Assigned to: <%= @volunteer.project_id%></h4>
<h4>Hours Worked: <%= @volunteer.hours%></h4>

<h3>Update the <%=@volunteer.name() %>'s info: </h3>

<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="volunteer_name">Volunteer Name Change:</label>
    <input id="volunteer_name" name="volunteer_name" type="text" required>
  </div>

  <div class="form-group">
    <label for="project_id">Switch Projects: (enter project ID)</label>
    <input id="project_id" name="project_id" type="text" required>
  </div>

  <div class="form-group">
    <label for="hours">Update Hours Worked:</label>
    <input id="hours" name="hours" type="number" min="0" max="10000" required>
  </div>

  <button type="submit" class="btn btn-warning">Update Volunteer Info</button>
</form>

<br>

<form action="/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <input name="project_id" type="hidden" value="<%= @volunteer.project_id%>">

  <a href="/" class="btn btn-info">Back</a>
  <button type="submit" class="btn btn-danger">Delete Volunteer</button>
</form>
