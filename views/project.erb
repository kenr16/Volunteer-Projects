<h2><%= @floating_text %></h2>


<% if @project.volunteers.any?%>
  <h3>Here are all the volunteers assigned to this project:</h3>
  <ul>
    <% @project.volunteers.each do |volunteer| %>
      <li> <%= volunteer.name %><%=" - ID: "%><%= volunteer.id %><%=" - Hours Worked: "%><%= volunteer.hours %> </li>
    <% end %>
  </ul>

<% else %>
  <p>There are no volunteers currently assigned to this project!</p>
<% end %>

<h3> Add a volunteer for this <%= @project.name %></h3>

<form action="/volunteers/add" method="post">
  <input id="project_id" name="project_id" type="hidden" value="<%= @project.id %>">
  <label for="volunteer_name">Name of the Volunteer:</label>
  <input id="volunteer_name" name="volunteer_name" type="text">
  <button type="submit" class="btn btn-primary">Add Volunteer</button>
</form>
